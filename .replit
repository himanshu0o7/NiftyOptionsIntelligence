modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "gcc", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "libyaml", "ocl-icd", "opencl-headers", "pkg-config", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trading System Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML Bot GUI"

[[workflows.workflow]]
name = "Trading System Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "ML Bot GUI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ml_bot && streamlit run simple_ml_gui.py --server.port 8501 --server.address 0.0.0.0 --server.headless true"
waitForPort = 8501

[[ports]]
localPort = 5000

[[ports]]
localPort = 8501
externalPort = 3000
