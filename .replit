[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trading System"

[[workflows.workflow]]
name = "Trading System"
author = "agent"

[[workflows.workflow.tasks]]
